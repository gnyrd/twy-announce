# WhatsApp Configuration
# Run 'npm run auth' to authenticate and create a session
WHATSAPP_SESSION_PATH=./sessions/whatsapp
WHATSAPP_GROUP_ID=

# Google Drive Configuration
# Get credentials from Google Cloud Console
GOOGLE_DRIVE_CREDENTIALS_PATH=./credentials/google-drive.json
GOOGLE_DRIVE_DOCUMENT_ID=

# Marvelous Platform
MARVELOUS_API_URL=https://heymarvelous.com
MARVELOUS_AUTH_TOKEN=

# Scheduler Configuration
# Time to check for posts (24-hour format)
POSTING_TIME=14:00
TIMEZONE=America/Denver

# Safety
# Set to 'true' to preview messages without actually posting
DRY_RUN=true
